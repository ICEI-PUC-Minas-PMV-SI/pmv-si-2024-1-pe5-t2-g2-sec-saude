<%- include("partials/header.ejs") %>

<main>
     <!-- Navbar -->
     <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Consulta Fácil</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Início</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Gerenciar Usuários</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Agenda de Médicos</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Relatórios</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Perfil</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Sair</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Dashboard Section -->
    <section class="container mt-4">
        <h2>Painel de Administração</h2>

        <!-- Estatísticas -->
        <div class="row">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-header bg-primary text-white">Total de Usuários</div>
                    <div class="card-body">
                        <h3><%= usuarios %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-header bg-info text-white">Total de Médicos</div>
                    <div class="card-body">
                        <h3><%= medicos %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-header bg-success text-white">Consultas Agendadas</div>
                    <div class="card-body">
                        <h3><%= consultas %></h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Relatórios -->
        <div class="card mt-4">
            <div class="card-header bg-warning">
                Relatórios Recentes
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">Relatório de Consultas Realizadas - Outubro 2024</li>
                    <li class="list-group-item">Relatório de Usuários Ativos - Outubro 2024</li>
                </ul>
            </div>
        </div>
    </section>

</main>

<%- include("partials/footer.ejs") %>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>